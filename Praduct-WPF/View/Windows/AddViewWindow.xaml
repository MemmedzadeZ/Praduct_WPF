<Window x:Class="Praduct_WPF.View.Windows.AddViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Praduct_WPF.View.Windows"
        mc:Ignorable="d"
        Title="AddViewWindow" Height="250" Width="200">
    <Grid>



        <DataGrid x:Name="DataGrid" HorizontalAlignment="left" Margin="10" VerticalAlignment="Top" Width="190" Height="190">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="50"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="60"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Prise}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
            
            

      















    </Grid>
</Window>
